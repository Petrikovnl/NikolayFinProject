<div class="row">
	<div class="col-lg-4 offset-lg-4 pt-4 pb-4 border">
		<div class="mb-3 text-center">
			<h3>SIGNUP</h3>
		</div>
		<div class="mb-3">
			<EditForm Model=@userAccount OnValidSubmit=@ValidFormSubmitted OnInvalidSubmit=@InvalidFormSubmitted>
				<DataAnnotationsValidator />
				<div class="form-group">
					<label for="UserLogin">UserLogin</label>
					<InputText @bind-Value=userAccount.UserLogin class="form-control" id="Name" placeholder="User Login" />
					<ValidationMessage For="()=>userAccount.UserLogin"></ValidationMessage>
				</div>

				<div class="form-group">
					<label for="Password">Password</label>
					<InputText @bind-Value=userAccount.Password class="form-control" id="Password" type="password" placeholder="Password" />
					<ValidationMessage For="()=>userAccount.Password"></ValidationMessage>
				</div>
				<div class="form-group">
					<label for="ConfirmPassword">ConfirmPassword</label>
					<InputText @bind-Value=userAccount.ConfirmPassword class="form-control" id="ConfirmPassword" type="password" placeholder="Confirm Password" />
					<ValidationMessage For="()=>userAccount.ConfirmPassword"></ValidationMessage>
				</div>
				@*<div class="form-group">
					<label for="Email">Email</label>
					<InputText @bind-Value=regUser.Email class="form-control" id="Email" placeholder="Email" />
					<ValidationMessage For="()=>regUser.Email"></ValidationMessage>
				</div>*@
				<input @onclick=UserRegistration class="btn btn-primary" type="submit" value="Sign Up" />
				<button @onclick="FieldsClear" class="btn btn-primary">CLEAR</button>
			</EditForm>
		</div>
	</div>
</div>