@page "/counter"
@using System;
@using System.Timers;
@implements IDisposable;

<h1>Counter</h1>

<p>Current count: @currentCount</p>

@*<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>*@

<div class="row row-sm-12 row-md-6 border border-primary rounded p-2">
    <div class="col-sm-12 col-md-6">
        @*<h3>Hello!</h3>*@
        <input class="form-control mb-2" @bind-value="Name"/>
        <input class="form-control mb-2" @bind-value="Age"/>
        
        <select @bind="SelectedValue">
            <option value="-1">@Value</option>
        </select>
        @*@foreach(var item in )
        {}*@
    </div>
</div>

@code {
    public string Name { get; set; }
    public string Age   { get; set; }
    public string SelectedValue { get; set; }
    public string Value { get; set; } = "-- Select item --";

    private int currentCount = 0;
    private static Timer aTimer;

    protected override void OnInitialized()
    {
        aTimer = new Timer(1000);           // Create a timer with a two second interval.
        aTimer.Elapsed += IncrementCount;   // Hook up the Elapsed event for the timer. 
                                            // aTimer.AutoReset = false;
                                            // aTimer.Enabled = true;
        aTimer.Start();
    }
    private void IncrementCount(object sender, ElapsedEventArgs e)
    {
        currentCount++;
        InvokeAsync(StateHasChanged);
        //aTimer.Stop();
        //aTimer.Dispose();
    }
    public void Dispose()
    {
        if (aTimer.Enabled)
        {
            aTimer.Dispose();
        }
    }
}
