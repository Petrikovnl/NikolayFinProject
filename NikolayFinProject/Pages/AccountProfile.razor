                    }
                </tr>
                <tr>
                    <th>Name</th>
                    @if (@User.GetAccountProfile(_login)==null)
                    {
                        <td>No data</td>
                    }
                    else
                    {
                        <td>@User.GetAccountProfile(_login).Name</td>
                    }
                </tr>
                <tr>
                    <th>Surname</th>
                    @if (@User.GetAccountProfile(_login)==null)
                    {
                        <td>No data</td>
                    }
                    else
                    {
                        <td>@User.GetAccountProfile(_login).Surname</td>
                    }
                </tr>
                <tr>
                    <th>Email</th>
                    @if (@User.GetAccountProfile(_login)==null)
                    {
                        <td>No data</td>
                    }
                    else
                    {
                        <td>@User.GetAccountProfile(_login).Email</td>
                    }
                </tr>
                <tr>
                    <th>Phone</th>
                    @if (@User.GetAccountProfile(_login)==null)
                    {
                        <td>No data</td>
                    }
                    else
                    {
                        <td>@User.GetAccountProfile(_login).Phone</td>
                    }
                </tr>
            
        </table>
    </div>
</div>




