@page "/accountprofile"
@using BlazorApp4.Data

<div>
    <input class="form-control" placeholder="login" @bind-value="_login" />
</div>
<h3>AccountProfile</h3>

<div class="row">

    <div class="container-fluid">
     
        <table class="table table-responsive-md">
            
                <tr>
                    <th>Login</th>
                    <td>@User.GetAccountProfile(_login).Login</td>
                </tr>
                <tr>
                    <th>Password</th>
                    <td>@User.GetAccountProfile(_login).Password</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>@User.GetAccountProfile(_login).Name</td>
                </tr>
                <tr>
                    <th>Surname</th>
                    <td>@User.GetAccountProfile(_login).Surname</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>@User.GetAccountProfile(_login).Email</td>
                </tr>
                <tr>
                    <th>Phone</th>
                    <td>@User.GetAccountProfile(_login).Phone</td>
                </tr>
            
        </table>
    </div>
</div>


